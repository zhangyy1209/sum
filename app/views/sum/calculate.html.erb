<h1>
A calculator to sum up three numbers.
</h1>

<%= form_tag do %>
    <div class="forms">
    <%= label_tag("Number 1:") %>
    <%= text_field_tag(:n1, @n1, placeholder: "Enter a number here...", autofocus: true)%>
    <%= label_tag("Number 2:") %>
    <%= text_field_tag(:n2, @n2, placeholder: "Enter a number here...", autofocus: true)%>
    <%= label_tag("Number 3:") %>
    <%= text_field_tag(:n3, @n3, placeholder: "Enter a number here...", autofocus: true)%>
    <%= submit_tag 'Calculate!' %>
    <%= @value %>
    </div>
<% end %>
